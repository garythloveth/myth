                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_drawer_yellow_pages"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/rl_yellow_pages_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/rl_yellow_pages_img"
                android:text="@string/left_drawer_item_yellow_pages"
                android:textColor="@color/left_drawer_item_text" />

            <ImageView
                android:id="@+id/rl_yellow_pages_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_drawer_arr" />
        </RelativeLayout>

        <ImageView
